{
  "namespace": "Hull",
  "srcFiles": ["src/hullbase.coffee", "src/hull.coffee", "src/utils/**/*.coffee", "src/client/**/*.coffee"],
  "requireJS": {
    "baseUrl": ".",
    "preserveLicenseComments": true,
    "paths": {
      "aura":           "components/aura/lib",
      "underscore":     "components/underscore/underscore",
      "eventemitter":   "components/eventemitter2/lib/eventemitter2",
      "backbone":       "components/backbone/backbone",
      "easyXDM":        "lib/shims/components/easyXDM/easyXDM",
      "handlebars":     "lib/shims/node_modules/grunt-contrib-handlebars/node_modules/handlebars/dist/handlebars",
      "requireLib":     "components/requirejs/require",
      "moment":         "components/moment/moment",
      "cookie":         "components/jquery.cookie/jquery.cookie",
      "string":         "components/underscore.string/lib/underscore.string",
      "jquery":         "empty:",
      "text":           "components/requirejs-text/text",
      "base64":         "components/base64/base64"
    },
    "shim": {
      "backbone":   { "exports": "Backbone", "deps": ["underscore", "jquery"] },
      "underscore": { "exports": "_" }
    },
    "include": [
      "requireLib",
      "underscore",
      "moment",
      "string",
      "cookie",
      "base64",
      "backbone",
      "text",
      "aura/ext/debug",
      "aura/ext/mediator",
      "aura/ext/widgets",
      "lib/hull"
      ],
    "out": "dist/<%= PKG_VERSION %>/hull.js",
    "wrap": {
      "start": "(function () {var require, requirejs, define,root = {jQuery: jQuery}; (function () {",
      "end": ";Hull.define = define;}).call(root);for(var i in root){root.hasOwnProperty(i) && Hull.define(i.toLowerCase(), function (){return root[i];})}})();"
    }
  }
}
