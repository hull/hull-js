{{#if user}}
  <div class="user-header admin-infos">

    <div class='media-body'>
      <div class="avatar pull-right">
        <div data-hull-component="admin/user_avatar@hull" data-hull-avatar={{user.picture}}></div>
      </div>
      <header class="name">
        <h4>{{user.name}}</h4>
      </header>
      <div class="admin-infos">
        <dl>
            <dt>Email</dt>
            <dd>{{user.email}}</dd>
            <dt>Username</dt>
            <dd>{{user.username}}</dd>
            <dt>Signed up</dt>
            <dd>{{fromNow user.created_at}}</dd>
        </dl>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="cell-6">
      <div class="admin-infos">
        <header>
          <h5>Identities</h5>
        </header>
        <dl>
        {{#if isGuest}}
          <dt>Guest user</dt>
          <dd><i class="icon-check"></i></dd>
        {{/if}}
        {{#if isEmail}}
          <dt>Email</dt>
          <dd>
            <a href="mailto:{{user.email}}">{{user.email}}</a>
          </dd>
        {{/if}}
        {{#key_value identities}}
          <dt>{{humanize key}}</dt>
          <dd>
            {{#if value.login}}{{value.login}}{{/if}}
            {{#if value.email}}
              (<a href="mailto:{{value.email}}">{{value.email}}</a>)
            {{/if}}
          </dd>
        {{/key_value}}
        </dl>
      </div>
    </div>
    <div class="cell-6">
      <div class="admin-infos admin-infos-permissions">
        <header>
          <h5>Permissions</h5>
        </header>
        <dl>
          <dt>Role:</dt>
          <dd>
            <div class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                {{#if user.is_admin}}
                  Admin
                {{else}}
                  User
                {{/if}}
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><a href="#" data-hull-action="promote" data-hull-role="normal">User</a></li>
                <li><a href="#" data-hull-action="promote" data-hull-role="admin">Admin</a></li>
              </ul>
            </div>
          </dd>
        </dl>
      </div>

    </div>

    <div class="cell-6 admin-infos">
        <header>
          <h5>Stats</h5>
        </header>
      {{#key_value user.stats}}
        <dl>
          <dt>{{humanize key}}</dt>
          <dd>{{json value}}</dd>
        </dl>
      {{/key_value}}

    </div>

  </div>

  {{#unless org.public}}
    <div class="admin-infos admin-infos-approve">
      {{#if user.approved}}
        <button class="btn btn-block" data-hull-action="unapprove">Unapprove</button>
      {{else}}
        <button class="btn btn-block" data-hull-action="approve">Approve</button>
      {{/if}}
    </div>
  {{/unless}}


  {{#if userHasProfiles}}
    <h3>Profiles</h3>
    <div class="admin-infos">
      {{#each user.profiles}}
        <header>
          <h5>{{@key}}:</h5>
        </header>
        <dl>
          {{#each this}}
            <dt>{{@key}}:</dt>
            <dd>{{this}}</dd>
          {{/each}}
        </dl>
      {{/each}}
    </div>
  {{/if}}

  {{#if badges}}
  <h3>Badges</h3>
  {{#badges}}
  <div class="admin-infos">
    <header>
      <h5>
        <small class="pull-right">
          <a class="btn-link" data-hull-action="deleteBadge" data-hull-id="{{id}}">
            <i class="icon-trash"></i> delete
          </a>
        </small>
        [{{achievement_type}}] {{achievement_name}}
      </h5>
    </header>
    <dl>
      <dt>created_at:</dt>
      <dd>{{created_at}}</dd>
      <dt>updated_at:</dt>
      <dd>{{updated_at}}</dd>
      <dt>Score:</dt>
      <dd>{{score}}</dd>
      <dt>Best Score:</dt>
      <dd>{{best_score}}</dd>
      <dt># attempts:</dt>
      <dd>{{stats.attempts}}</dd>
    </dl>
  </div>
  {{/badges}}
  {{/if}}

{{else}}
  <div class="admin-empty text-center">
    <div class="admin-empty-wrapper">
      <span class="admin-empty-icon">&#9785;</span>
      <h4>User not found</h4>
    </div>
  </div>
{{/if}}
